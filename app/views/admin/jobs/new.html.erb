<div class="col-md-4 col-md-offset-4">
    <h2>Add a job</h2>
    <form role="form" data-toggle="validator">
    <% if @job.errors.any? %>
     <ul>
       <% @job.errors.full_messages.each do |error| %>
         <li><%= error %></li>
       <% end %>
     </ul>
   <% end %>
    <%= form_for [:admin, @job] do |f| %>
    <div class="from-group">
      <%= f.label :title %>
      <%= f.text_field :title,:class=>"from-control" ,:required => true%>
       <div class="help-block with-errors"></div>

    </div>
    <div class="from-group">
        <%= f.label :description %>
        <%= f.text_area :description,:class=> "form-control" %>
    </div>
      <div class="from-group">
        <%= f.label :upper_bound %>
        <%= f.text_area :wage_upper_bound, :label =>"薪资上限" ,:class=> "form-control" %>
         <div class="help-block with-errors"></div>

     </div>

     <div class="from-group">
           <%= f.label :lower_bound %>
           <%= f.text_field :wage_lower_bound, :label =>"薪资下限",:class=> "form-control"  %>
         <div class="help-block with-errors"></div>
     </div>


     <div class="from-group">
          <%= f.label :email %>
          <%= f.email_field :contact_email,:class=> "form-control"  %>
       <div class="help-block with-errors"></div>

     </div>

    <div class="from-group">

        <%= f.select :status,Job::STATUS,:class => "form_control" %>
    </div>

    <div class="form-group">
        <%= f.submit "Submit" %>
    </div>

    <% end %>
  </form>
</div>

<script>
   $("form").validator();
</script>
